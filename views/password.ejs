<form action="/findUser" >
    <div id="statusMessage" class="message"></div>
    <div id="formError" class="message"></div>
    <label for="email">Email</label>
    <input type="text" name="email"  required>
    <button>Submit</button>
</form>

<script>
    const form = document.querySelector('form');
    const formError = document.querySelector('#formError');
    const statusMessage = document.querySelector('#statusMessage')
  
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
  
      // get values
      const email= form.email.value;
  
      // reset errors 
      formError.textContent = '';
      statusMessage.textContent = '';
  
      try {
  
        const res = await fetch('/api/user/findUser', { 
          method: 'POST', 
          body: JSON.stringify({ email }),
          headers: {'Content-Type': 'application/json'}
        });
        const data = await res.json();
        if (res.ok) {
          statusMessage.textContent = data.message;
          statusMessage.classList.add('success')
          setTimeout(() =>
            window.location.href = '/updatePassword', 1000)
          
        }else {
          formError.textContent = data.message|| '';
          formError.classList.add('error')
        }
      }
      catch (err){
          console.error(err)
          statusMessage.textContent = data.message || 'An unexpected error occurred'
          statusMessage.classList.add('error')
      }
    });
  </script>
  
  <style>
    /* styles.css */
  
  .message {
      padding: 10px;
      border-radius: 4px;
      margin: 10px 0;
  }
  
  .message.error {
      color: red;
      background-color: #fdd;
  }
  
  .message.success {
      color: green;
      background-color: #dfd;
  }
  
